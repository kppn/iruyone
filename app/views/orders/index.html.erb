<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Status</th>
      <th>Order message</th>
      <th>Payment</th>
      <th>Num comment</th>
      <th>Num view</th>
      <th>Num pop</th>
      <th>Order date</th>
      <th>Close date</th>
      <th>List image name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.client %></td>
        <td><%= order.status %></td>
        <td><%= order.order_message %></td>
        <td><%= order.payment %></td>
        <td><%= order.num_comment %></td>
        <td><%= order.num_view %></td>
        <td><%= order.num_pop %></td>
        <td><%= order.order_date %></td>
        <td><%= order.close_date %></td>
        <td><%= order.list_image_name %></td>
        <td><%= order.description %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

